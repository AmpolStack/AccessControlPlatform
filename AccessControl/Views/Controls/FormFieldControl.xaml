<UserControl x:Class="AccessControl.Views.Controls.FormFieldControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AccessControl.Views.Controls"
             mc:Ignorable="d" 
             x:Name="ucFormField"
             d:DesignHeight="450" d:DesignWidth="800">
    
    <UserControl.Resources>
        
        <Style x:Key="FormFieldBorderStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="{StaticResource AppGrayBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource AppGrayBrush}"/>
            <Setter Property="Effect">
                
                <Setter.Value>
                    <DropShadowEffect BlurRadius="5" ShadowDepth="3" Opacity="0" Color="Black" Direction="270"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsFocused, ElementName=txtInput}" Value="True">
                    <DataTrigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <!-- Animación de cambio de color de fondo -->
                                <ColorAnimation To="{StaticResource AppWhiteColor}"
                                                Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                Duration="0:0:0.2"/>
                                <!-- Animación de cambio de color del borde -->
                                <ColorAnimation To="{StaticResource AppBlackColor}"
                                                Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                                Duration="0:0:0.2"/>
                                <!-- Animación de la sombra -->
                                <DoubleAnimation To="0.3"
                                                 Storyboard.TargetProperty="(Border.Effect).(DropShadowEffect.Opacity)"
                                                 Duration="0:0:0.2">
                                    <DoubleAnimation.EasingFunction>
                                        <CubicEase EasingMode="EaseOut"/>
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                            </Storyboard>
                        </BeginStoryboard>
                    </DataTrigger.EnterActions>
                    <DataTrigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <!-- Revertir a los colores originales -->
                                <ColorAnimation To="{StaticResource AppGrayColor}"
                                                Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                Duration="0:0:0.2"/>
                                <ColorAnimation To="{StaticResource AppGrayColor}"
                                                Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                                Duration="0:0:0.2"/>
                                <!-- Desvanecer la sombra -->
                                <DoubleAnimation To="0"
                                                 Storyboard.TargetProperty="(Border.Effect).(DropShadowEffect.Opacity)"
                                                 Duration="0:0:0.2">
                                    <DoubleAnimation.EasingFunction>
                                        <CubicEase EasingMode="EaseOut"/>
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                            </Storyboard>
                        </BeginStoryboard>
                    </DataTrigger.ExitActions>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    
    <StackPanel Orientation="Vertical"
                Margin="0,10"
                HorizontalAlignment="Stretch">

        <Label Content="{Binding LabelText, ElementName=ucFormField}"
                Padding="0"
                FontSize="14"
                FontWeight="{StaticResource InterSemiBoldWeight}"
                Foreground="#373737"
                Target="{Binding ElementName=txtInput}" />

        <Border x:Name="borderContainer"
                Style="{StaticResource FormFieldBorderStyle}">
            <TextBox x:Name="txtInput"
                     BorderThickness="0"
                     Padding="0,4"
                     Background="Transparent"
                     VerticalContentAlignment="Center"
                     Text="{Binding Text, ElementName=ucFormField, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        </Border>

    </StackPanel>
</UserControl>