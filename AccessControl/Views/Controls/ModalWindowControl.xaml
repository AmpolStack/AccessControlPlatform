<UserControl x:Class="AccessControl.Views.Controls.ModalWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AccessControl.Views.Controls"
             mc:Ignorable="d" 
             x:Name="ucModalWindow"
             d:DesignHeight="450" d:DesignWidth="800">

    <Border CornerRadius="10"
            VerticalAlignment="Top"
            Padding="15"
            Panel.ZIndex="9999"
            Visibility="{Binding ModalWindowVisibility, ElementName=ucModalWindow, Converter={StaticResource BoolToVisibilityConverter}}"
            Background="{Binding ModalWindowType, ElementName=ucModalWindow, Converter={StaticResource ButtonTypeToBrushConverter}}">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="*" MaxWidth="18"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       TextWrapping="Wrap"
                       VerticalAlignment="Top"
                       TextAlignment="Left"
                       FontWeight="{StaticResource InterSemiBoldWeight}"
                       Text="{Binding ModalWindowText, ElementName=ucModalWindow}"
                       FontSize="14"
                       Foreground="{StaticResource AppWhiteBrush}"/>

            <Image Grid.Column="1"
                   VerticalAlignment="Top"
                   Cursor="Hand"
                   Source="/Resources/Assets/Images/close-icon.png"
                   Stretch="Uniform"
                   RenderOptions.BitmapScalingMode="HighQuality"/>

        </Grid>
    </Border>
    
</UserControl>
