<Window x:Class="AccessControl.Views.Windows.SuccessfulEstablishmentCreation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AccessControl.Views.Windows"
        xmlns:controls="clr-namespace:AccessControl.Views.Controls"
        mc:Ignorable="d"
        WindowStyle="None"
        Background="Transparent"
        Foreground="{StaticResource AppBlackBrush}"
        AllowsTransparency="True"
        Title="SuccessfulEstablishmentCreation"  Height="680" Width="905"
        DataContext="{Binding SuccessEstablishmentCreatedViewModel, Source={StaticResource ViewModelLocator}}">


    <Border Background="{StaticResource AppWhiteBrush}" CornerRadius="18" Padding="30,30,30, 20">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" MaxHeight="100"/>
                <RowDefinition Height="4*"/>
            </Grid.RowDefinitions>

            <controls:HeaderControl/>

            <StackPanel Grid.Row="1" VerticalAlignment="Center" MaxWidth="500">


                <TextBlock TextWrapping="Wrap"
                           Foreground="{StaticResource AppBlackBrush}"
                           FontWeight="{StaticResource InterBoldWeight}"
                           FontSize="30">
                    <TextBlock>Felicidades! El establecimiento</TextBlock>
                    <TextBlock Foreground="{StaticResource AppBlueBrush}"
                               Text="{Binding EstablishmentName}"/>
                    <TextBlock>fué creado exitosamente</TextBlock>
                </TextBlock>


                <TextBlock Margin="0, 10, 0, 0" TextWrapping="Wrap" FontSize="30" HorizontalAlignment="Center"
                VerticalAlignment="Center">Para continuar debe iniciar sesión con las credenciales anteriormente digitadas.</TextBlock>

                <controls:StandardButtonControl Margin="0, 20, 0, 0"  ButtonContent="Ir al inicio" ButtonType="Vibrant"
                                                Command="{Binding BackToLoginCommand}"></controls:StandardButtonControl>
            </StackPanel>

        </Grid>
    </Border>
</Window>
