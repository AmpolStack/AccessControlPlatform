<Window x:Class="AccessControl.Views.Windows.CreateUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AccessControl.Views.Windows"
        xmlns:controls="clr-namespace:AccessControl.Views.Controls"
        mc:Ignorable="d"
        Title="Crear Nuevo Usuario"
        Height="600"
        Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{StaticResource AppBackgroundLightBrush}"
        DataContext="{Binding CreateUserViewModel, Source={StaticResource ViewModelLocator}}">

    <Grid>
        <!-- Modal Overlay -->
        <controls:ModalWindowControl ModalWindowType="{Binding ModalType}"
                                     ModalWindowText="{Binding ModalText}"
                                     ModalWindowVisibility="{Binding IsModalVisible, Mode=TwoWay}"
                                     Panel.ZIndex="100"/>

        <!-- Content -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Disabled">
            <Grid Margin="40">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <TextBlock Grid.Row="0"
                           Text="Nuevo Usuario"
                           Style="{StaticResource AppTitleStyle}"
                           FontSize="{StaticResource FontSizeExtraLarge}"
                           Margin="0,0,0,30"/>

                <!-- Form -->
                <StackPanel Grid.Row="1">
                    
                    <!-- Nombre Completo -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Nombre Completo" Style="{StaticResource AppLabelStyle}"/>
                        <TextBox Text="{Binding FullName, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource AppInputStyle}"/>
                    </StackPanel>

                    <!-- Documento de Identidad -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Documento de Identidad" Style="{StaticResource AppLabelStyle}"/>
                        <TextBox Text="{Binding IdentityDocument, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource AppInputStyle}"/>
                    </StackPanel>

                    <!-- Correo Electrónico -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Correo Electrónico" Style="{StaticResource AppLabelStyle}"/>
                        <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource AppInputStyle}"/>
                    </StackPanel>

                    <!-- Contraseña -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Contraseña" Style="{StaticResource AppLabelStyle}"/>
                        <PasswordBox x:Name="PasswordBox"
                                     Style="{StaticResource AppPasswordStyle}"
                                     PasswordChanged="PasswordBox_PasswordChanged"/>
                    </StackPanel>

                    <!-- Confirmar Contraseña -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Confirmar Contraseña" Style="{StaticResource AppLabelStyle}"/>
                        <PasswordBox x:Name="ConfirmPasswordBox"
                                     Style="{StaticResource AppPasswordStyle}"
                                     PasswordChanged="ConfirmPasswordBox_PasswordChanged"/>
                    </StackPanel>

                </StackPanel>

                <!-- Actions -->
                <Grid Grid.Row="2" Margin="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0"
                            Content="Cancelar"
                            Command="{Binding CancelCommand}"
                            Style="{StaticResource AppSecondaryButtonStyle}"
                            Margin="0,0,10,0"/>

                    <Button Grid.Column="1"
                            Content="Crear Usuario"
                            Command="{Binding CreateUserCommand}"
                            Style="{StaticResource AppSuccessButtonStyle}"
                            Padding="30,10"/>
                </Grid>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>
