<Window x:Class="AccessControl.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AccessControl"
        xmlns:vm="clr-namespace:AccessControl.Views.ViewModels"
        xmlns:controls= "clr-namespace:AccessControl.Views.Controls"
        mc:Ignorable="d"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        Title="MainWindow" Height="680" Width="905"
        DataContext="{Binding LoginViewModel, Source={StaticResource ViewModelLocator}}">

    <Border Background="{StaticResource AppWhiteBrush}" CornerRadius="18" Padding="30,30,30, 20">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MaxWidth="200"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="*" MaxWidth="200"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*" MaxHeight="100"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*" MaxHeight="40"/>
            </Grid.RowDefinitions>

            <controls:HeaderControl Grid.Column="0"
                                    Grid.ColumnSpan="3"
                                    Grid.Row="0"
                                    UserName="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>


            <TextBlock Grid.Column="0"
                       Grid.Row="2"
                       Grid.ColumnSpan="3"
                       TextAlignment="Left"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Style="{StaticResource AppBodyStyle}">
                       ¿Está usted interesado en crear su propio establecimiento?
                <Hyperlink Foreground="{StaticResource AppPrimaryBrush}" 
                           TextDecorations="Underline"
                           Command="{Binding OpenCreateEstablishmentWindowCommand}">
                        Ingrese Aquí
                </Hyperlink>
            </TextBlock>


            <Grid Grid.Column="1"
                  Grid.Row="1" 
                  VerticalAlignment="Center">
                
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*" MaxHeight="120"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid HorizontalAlignment="Center" Margin="0,0,0,20">
                    <Ellipse Fill="{StaticResource AppTextPrimaryBrush}" Width="100" Height="100"/>
                    <Border CornerRadius="50"
                            ClipToBounds="True"
                            Margin="15">
                        <Image Source="/Resources/Assets/Images/user-white-icon.png"
                               Stretch="Uniform"
                               RenderOptions.BitmapScalingMode="HighQuality"/>
                    </Border>
                </Grid>

                <StackPanel Grid.Row="1" Margin="0,0,0,20">
                    <TextBlock Text="Email" Style="{StaticResource AppLabelStyle}"/>
                    <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource AppInputStyle}"/>
                </StackPanel>

                <StackPanel Grid.Row="2" Margin="0,0,0,20">
                    <TextBlock Text="Contraseña" Style="{StaticResource AppLabelStyle}"/>
                    <TextBox Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource AppInputStyle}"/>
                </StackPanel>

                <Button Grid.Row="3"
                        Content="Ingresar"
                        Command="{Binding LoginCommand}"
                        Style="{StaticResource AppPrimaryButtonStyle}"
                        Margin="0,10,0,0"/>

            </Grid>
                        
            <controls:ModalWindowControl 
                      Grid.Column="1"
                      Grid.Row="0"
                      Grid.ColumnSpan="2"
                      Grid.RowSpan="2"
                      ModalWindowType="{Binding ModalType}"
                      ModalWindowText="{Binding ModalText}"
                      ModalWindowVisibility="{Binding IsModalVisible}"/>

        </Grid>
    </Border>
</Window>
