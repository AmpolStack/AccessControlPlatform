<Window x:Class="AccessControl.Views.Windows.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AccessControl.Views.Windows"
        xmlns:controls="clr-namespace:AccessControl.Views.Controls"
        xmlns:behavior="clr-namespace:AccessControl.Infraestructure.Common"
        xmlns:vm="clr-namespace:AccessControl.Views.ViewModels"
        mc:Ignorable="d"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        FontFamily="{StaticResource InterFont}"
        FontWeight="{StaticResource InterNormalWeight}"
        Foreground="{StaticResource AppBlackBrush}"
        Height="680" Width="905"
        Title="DashboardWindow"
        DataContext="{Binding DashboardWindowViewModel, Source={StaticResource ViewModelLocator}}"
        behavior:ViewLoadedBehavior.OnLoaded="{Binding LoadHomePageCommand}">

    <Border Background="{StaticResource AppWhiteBrush}" CornerRadius="18">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MaxWidth="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*" MaxHeight="150"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <controls:HeaderControl  Padding="30" Grid.ColumnSpan="3"
                                     UserName="{Binding EstablishmentName}"
                                     ></controls:HeaderControl>

            <Border Padding="15"
                    Grid.Row="1"
                    Background="{StaticResource AppGrayBrush}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="4*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                    

                    <Border Margin="10" Background="{StaticResource AppWhiteBrush}" CornerRadius="3"
                            Grid.Row="0">
                        <TextBlock VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   FontWeight="{StaticResource InterBoldWeight}"
                                   Text="{Binding CapacityText}"/>
                    </Border>

                    <Grid Grid.Row="2"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"
                          
                                >

                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>

                        <controls:StandardButtonControl Grid.Row="0" 
                                                        ButtonType="Sober" 
                                                        VerticalAlignment="Stretch" 
                                                        HorizontalAlignment="Stretch" 
                                                        ButtonContent="INICIO"
                                                        Command="{Binding LoadHomePageCommand}"/>
                        <controls:StandardButtonControl Grid.Row="1"
                                                        ButtonType="Sober" 
                                                        ButtonContent="PERFIL"
                                                        Command="{Binding LoadProfilePageCommand}"/>
                        <controls:StandardButtonControl Grid.Row="2" 
                                                        ButtonType="Sober" 
                                                        ButtonContent="USUARIOS"
                                                        Command="{Binding LoadUsersPageCommand}"/>
                        <controls:StandardButtonControl Grid.Row="3" 
                                                        ButtonType="Sober" 
                                                        ButtonContent="ESTABLECIMIENTO"
                                                        Command="{Binding LoadEstablishmentPageCommand}"/>
                        <controls:StandardButtonControl Grid.Row="4" 
                                                        ButtonType="Sober" 
                                                        ButtonContent="REPORTES"
                                                        Command="{Binding LoadReportsPageCommand}"/>
                    </Grid>

                    <controls:StandardButtonControl Grid.Row="5" ButtonType="Danger" 
                                                    ButtonContent="CERRAR SESIÓN"
                                                    Command="{Binding LogOutCommand}"/>
                </Grid>

            </Border>

            <Frame Grid.Row="1"
                   Grid.Column="1"
                   x:Name="MainContentFrame"
                   NavigationUIVisibility="Hidden"
                   Background="Transparent"
                   behavior:FrameBehavior.InitializationCommand="{Binding InitializeNavigationCommand}"/>

        </Grid>
    </Border>
</Window>
