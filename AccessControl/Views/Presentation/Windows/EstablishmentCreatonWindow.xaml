<Window x:Class="AccessControl.Views.Windows.EstablishmentCreatonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AccessControl.Views.Windows"
        xmlns:controls="clr-namespace:AccessControl.Views.Controls"
        mc:Ignorable="d"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        Title="EstablishmentCreatonWindow" Height="680" Width="905"
        DataContext="{Binding EstablishmentCreationViewModel, Source={StaticResource ViewModelLocator}}">

    <Border Background="{StaticResource AppWhiteBrush}" CornerRadius="18" Padding="30,30,30, 20">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" MaxHeight="100"/>
                <RowDefinition Height="4*"/>
            </Grid.RowDefinitions>

            <controls:HeaderControl Grid.Column="0"
                                Grid.Row="0"
                                Grid.ColumnSpan="3">
            </controls:HeaderControl>

            <ScrollViewer Grid.Column="1"
                          Grid.Row="1"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled">

                <StackPanel>
                    <TextBlock FontSize="22"
                               FontWeight="{StaticResource InterBoldWeight}"
                               Text="CREAR ESTABLECIMIENTO"
                               Foreground="{StaticResource AppBlueBrush}"
                               TextAlignment="Center"
                               Margin="0, 0, 0, 30"/>
                    
                    <WrapPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                               >

                        <StackPanel
                                HorizontalAlignment="Center"
                                MinWidth="800"
                                Width="auto"
                                Height="auto"
                                Margin="20, 0">



                            <StackPanel Grid.Row="1"
                                        Margin="10">

                                <StackPanel Orientation="Horizontal"
                                        Grid.Row="0"
                                        VerticalAlignment="Bottom"
                                        Margin="0, 0, 0, 10">

                                    <TextBlock FontSize="16"
                                           Grid.Row="1"
                                           FontWeight="{StaticResource InterMediumWeight}"
                                           Text="1. Información del establecimiento:"/>


                                    <TextBlock FontSize="16"
                                           Grid.Row="1"
                                           FontWeight="{StaticResource InterNormalWeight}"
                                           Text=" Basico"/>

                                </StackPanel>

                                <Border Padding="20"
                                     Background="{StaticResource AppGrayBrush}" 
                                     CornerRadius="8">

                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>


                                        <controls:AlternativeFormFieldControl Grid.Row="0"
                                                                           Margin="20,0,20,0"
                                                                           VerticalAlignment="Center"
                                                                           Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                                                                           LabelText="_Nombre"/>

                                        <controls:AlternativeFormFieldControl Grid.Row="1"
                                                                          VerticalAlignment="Center"
                                                                          TextWrapMode="Wrap"
                                                                          IsMultiline="True"
                                                                          Margin="20,0,20,0"
                                                                          Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                                                                          LabelText="_Descripción"/>
                                    </Grid>

                                </Border>


                            </StackPanel>
                            
                            <StackPanel
                                        Margin="10">

                                <StackPanel Orientation="Horizontal"
                                            Grid.Row="0"
                                            VerticalAlignment="Bottom"
                                            Margin="0, 0, 0, 10">

                                    <TextBlock FontSize="16"
                                               Grid.Row="1"
                                               FontWeight="{StaticResource InterMediumWeight}"
                                               Text="2. Información del establecimiento:"/>


                                    <TextBlock FontSize="16"
                                               Grid.Row="1"
                                               FontWeight="{StaticResource InterNormalWeight}"
                                               Text=" Contacto y Ubicación"/>

                                </StackPanel>

                                <Border Padding="20"
                                        Background="{StaticResource AppGrayBrush}" 
                                        CornerRadius="8">

                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>


                                        <controls:AlternativeFormFieldControl Grid.Row="0"
                                               Margin="20,0,20,0"
                                               VerticalAlignment="Center"
                                               Text="{Binding City, UpdateSourceTrigger=PropertyChanged}"
                                               LabelText="_Ciudad o Municipio"/>

                                        <controls:AlternativeFormFieldControl Grid.Row="1"
                                              VerticalAlignment="Center"
                                              TextWrapMode="Wrap"
                                              IsMultiline="True"
                                              Margin="20,0,20,0"
                                              Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}"
                                              LabelText="_Dirección (Opcional)"/>

                                        <controls:AlternativeFormFieldControl Grid.Row="2"
                                              VerticalAlignment="Center"
                                              Margin="20,0,20,0"
                                              Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                                              LabelText="_Correo (Opcional)"/>

                                        <controls:AlternativeFormFieldControl Grid.Row="3"
                                              VerticalAlignment="Center"
                                              Margin="20,0,20,0"
                                              Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged}"
                                              LabelText="_Numero Telefónico (Opcional)"/>
                                    </Grid>

                                </Border>


                            </StackPanel>

                            <StackPanel Margin="10">
                                <StackPanel Orientation="Horizontal"
                                            VerticalAlignment="Bottom"
                                            Margin="0, 0, 0, 10">

                                    <TextBlock FontSize="16"
                                               Grid.Row="1"
                                               FontWeight="{StaticResource InterMediumWeight}"
                                               Text="3. Información del usuario:"/>

                                </StackPanel>

                                <Border Padding="20"
                                        Background="{StaticResource AppGrayBrush}" 
                                        CornerRadius="8">

                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>


                                        <controls:AlternativeFormFieldControl Grid.Row="0"
                                                                              Margin="20,0,20,0"
                                                                              VerticalAlignment="Center"
                                                                              Text="{Binding UserFullName, UpdateSourceTrigger=PropertyChanged}"
                                                                              LabelText="_Nombre Completo"/>

                                        <controls:AlternativeFormFieldControl Grid.Row="1"
                                                                              Margin="20,0,20,0"
                                                                              VerticalAlignment="Center"
                                                                              Text="{Binding IdentityDocument, UpdateSourceTrigger=PropertyChanged}"
                                                                              LabelText="_Documento"/>


                                        <controls:AlternativeFormFieldControl Grid.Row="2"
                                                                              VerticalAlignment="Center"
                                                                              Margin="20,0,20,0"
                                                                              Text="{Binding UserEmail, UpdateSourceTrigger=PropertyChanged}"
                                                                              LabelText="_Correo"/>

                                        <controls:AlternativeFormFieldControl Grid.Row="3"
                                                                              VerticalAlignment="Center"
                                                                              Margin="20,0,20,0"
                                                                              Text="{Binding UserPassword, UpdateSourceTrigger=PropertyChanged}"
                                                                              LabelText="_Contraseña"/>

                                        <controls:AlternativeFormFieldControl Grid.Row="4"
                                                                              VerticalAlignment="Center"
                                                                              Margin="20,0,20,0"
                                                                              Text="{Binding UserPasswordConfirmation, UpdateSourceTrigger=PropertyChanged}"
                                                                              LabelText="_Confirmar Contraseña"/>
                                    </Grid>

                                </Border>


                            </StackPanel>


                        </StackPanel>

                    </WrapPanel>

                    <StackPanel Orientation="Horizontal">

                        <controls:StandardButtonControl ButtonType="Sober"
                                                            Margin="20"
                                                            FontWeight="{StaticResource InterBoldWeight}"
                                                            Grid.Column="1"
                                                            VerticalAlignment="Top"
                                                            Grid.Row="1"
                                                            Command="{Binding BackToLoginCommand}"
                                                            HorizontalAlignment="Center"
                                                            ButtonContent="VOLVER"></controls:StandardButtonControl>

                        <controls:StandardButtonControl ButtonType="Success"
                                                            Margin="20"
                                                            FontWeight="{StaticResource InterBoldWeight}"
                                                            Grid.Column="1"
                                                            VerticalAlignment="Top"
                                                            Grid.Row="1"
                                                            Command="{Binding CreateEstablishmentCommand}"
                                                            HorizontalAlignment="Center"
                                                            ButtonContent="CREAR"></controls:StandardButtonControl>

                    </StackPanel>

                </StackPanel>

            </ScrollViewer>

            <controls:ModalWindowControl 
                Grid.Row="0"
                Grid.RowSpan="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Margin="0,20,0,0"
                ModalWindowType="{Binding ModalType}"
                ModalWindowText="{Binding ModalText}"
                ModalWindowVisibility="{Binding IsModalVisible}"/>

        </Grid>
    </Border>
</Window>
