<Page x:Class="AccessControl.Views.Pages.ReportsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AccessControl.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="ReportsPage"
      Background="Transparent">

    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                  HorizontalScrollBarVisibility="Disabled"
                  Padding="40,20,40,40">
        
        <Grid MaxWidth="900">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="Reportes de Acceso"
                           Style="{StaticResource AppTitleStyle}"
                           FontSize="{StaticResource FontSizeLarge}"
                           Margin="0,0,0,10"/>

                <TextBlock Text="{Binding EstablishmentName}"
                           Style="{StaticResource AppSubtitleStyle}"
                           FontSize="{StaticResource FontSizeMedium}"
                           Foreground="{StaticResource AppPrimaryBrush}"/>
            </StackPanel>

            <!-- Date Range Selection -->
            <Border Grid.Row="1" 
                    Background="{StaticResource AppBackgroundLightBrush}"
                    CornerRadius="8"
                    Padding="20"
                    Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="Fecha Inicio:"
                               VerticalAlignment="Center"
                               Style="{StaticResource AppLabelStyle}"
                               Margin="0,0,10,0"/>

                    <DatePicker Grid.Column="1"
                                SelectedDate="{Binding StartDate, Mode=TwoWay}"
                                Margin="0,0,20,0"
                                Height="40"/>

                    <TextBlock Grid.Column="2"
                               Text="Fecha Fin:"
                               VerticalAlignment="Center"
                               Style="{StaticResource AppLabelStyle}"
                               Margin="0,0,10,0"/>

                    <DatePicker Grid.Column="3"
                                SelectedDate="{Binding EndDate, Mode=TwoWay}"
                                Margin="0,0,20,0"
                                Height="40"/>

                    <Button Grid.Column="4"
                            Content="Cargar Datos"
                            Command="{Binding LoadDataCommand}"
                            Style="{StaticResource AppPrimaryButtonStyle}"
                            Padding="20,10"/>
                </Grid>
            </Border>

            <!-- Info Panel -->
            <Border Grid.Row="2"
                    Background="{StaticResource AppBackgroundLightBrush}"
                    CornerRadius="8"
                    Padding="15"
                    Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="{Binding DateRangeText}"
                               Style="{StaticResource AppBodyStyle}"
                               FontWeight="{StaticResource InterSemiBoldWeight}"
                               Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding RecordsCountText}"
                               Style="{StaticResource AppBodyStyle}"/>
                    <TextBlock Text="{Binding FilteredCountText}"
                               Style="{StaticResource AppBodyStyle}"
                               Foreground="{StaticResource AppPrimaryBrush}"
                               FontWeight="{StaticResource InterSemiBoldWeight}"
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Search Filter -->
            <Border Grid.Row="3"
                    Background="{StaticResource AppBackgroundLightBrush}"
                    CornerRadius="8"
                    Padding="15"
                    Margin="0,0,0,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="ðŸ” Buscar por nombre o documento:"
                               VerticalAlignment="Center"
                               Style="{StaticResource AppLabelStyle}"
                               Margin="0,0,10,0"/>

                    <TextBox Grid.Column="1"
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource AppInputStyle}"
                             Height="40"
                             VerticalContentAlignment="Center"
                             Padding="12,0"/>

                    <Button Grid.Column="2"
                            Content="Limpiar"
                            Command="{Binding ClearSearchCommand}"
                            Style="{StaticResource AppSecondaryButtonStyle}"
                            Padding="15,8"
                            Margin="10,0,0,0"
                            Height="40"/>
                </Grid>
            </Border>

            <!-- Data Grid -->
            <Border Grid.Row="4"
                    BorderBrush="{StaticResource AppBorderBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Margin="0,0,0,20">
                <DataGrid ItemsSource="{Binding Records}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          HeadersVisibility="Column"
                          GridLinesVisibility="Horizontal"
                          RowBackground="{StaticResource AppWhiteBrush}"
                          AlternatingRowBackground="{StaticResource AppBackgroundHoverBrush}"
                          BorderThickness="0"
                          CanUserResizeRows="False"
                          SelectionMode="Single">
                    
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Fecha" 
                                            Binding="{Binding EntryDateTime, StringFormat='dd/MM/yyyy'}" 
                                            Width="100"/>
                        <DataGridTextColumn Header="Hora Entrada" 
                                            Binding="{Binding EntryDateTime, StringFormat='HH:mm:ss'}" 
                                            Width="100"/>
                        <DataGridTextColumn Header="Nombre Completo" 
                                            Binding="{Binding FullName}" 
                                            Width="*"
                                            MinWidth="150"/>
                        <DataGridTextColumn Header="Documento" 
                                            Binding="{Binding IdentityDocument}" 
                                            Width="120"/>
                        <DataGridTextColumn Header="Hora Salida" 
                                            Binding="{Binding ExitDateTime, StringFormat='HH:mm:ss'}" 
                                            Width="100"/>
                        <DataGridTextColumn Header="DuraciÃ³n (min)" 
                                            Binding="{Binding DurationMinutes}" 
                                            Width="100"/>
                    </DataGrid.Columns>

                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="{StaticResource AppPrimaryBrush}"/>
                            <Setter Property="Foreground" Value="{StaticResource AppWhiteBrush}"/>
                            <Setter Property="FontWeight" Value="{StaticResource InterSemiBoldWeight}"/>
                            <Setter Property="Padding" Value="12,8"/>
                            <Setter Property="BorderThickness" Value="0,0,1,0"/>
                            <Setter Property="BorderBrush" Value="{StaticResource AppWhiteBrush}"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Padding" Value="12,8"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="FontFamily" Value="{StaticResource InterFont}"/>
                        </Style>
                    </DataGrid.CellStyle>
                </DataGrid>
            </Border>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="5" 
                        Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button Content="GENERAR REPORTE PDF"
                        Command="{Binding GenerateReportCommand}"
                        Style="{StaticResource AppSuccessButtonStyle}"
                        Padding="30,12"
                        Margin="0,0,10,0"/>
                
                <Button Content="ACTUALIZAR DATOS"
                        Command="{Binding LoadDataCommand}"
                        Style="{StaticResource AppPrimaryButtonStyle}"
                        Padding="30,12"/>
            </StackPanel>

        </Grid>
    </ScrollViewer>
</Page>
