<Page x:Class="AccessControl.Views.Pages.EstablishmentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AccessControl.Views.Pages"
      xmlns:behavior="clr-namespace:AccessControl.Infraestructure.Common"
      behavior:FrameBehavior.InitializationCommand="{Binding InitCommand}"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="EstablishmentPage"
      Background="Transparent">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        
        <!-- Converter inverso -->
        <Style x:Key="InverseVisibilityStyle" TargetType="FrameworkElement">
            <Setter Property="Visibility" Value="Collapsed"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsEditing}" Value="False">
                    <Setter Property="Visibility" Value="Visible"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                  HorizontalScrollBarVisibility="Disabled"
                  Padding="40,20,40,40">
        
        <Grid MaxWidth="700">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Grid.Row="0"
                       Text="Información del Establecimiento:"
                       Style="{StaticResource AppTitleStyle}"
                       FontSize="{StaticResource FontSizeLarge}"
                       Margin="0,0,0,20"/>

            <!-- Open/Close Buttons -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,30">
                
                <Button Content="ABRIR ESTABLECIMIENTO"
                        Command="{Binding OpenEstablishmentCommand}">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource AppSuccessButtonStyle}">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsOpen}" Value="False">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Content="CERRAR ESTABLECIMIENTO"
                        Command="{Binding CloseEstablishmentCommand}"
                        Background="{StaticResource AppWarningBrush}"
                        Foreground="{StaticResource AppWhiteBrush}">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource AppButtonStyle}">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsOpen}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
            </StackPanel>

            <!-- Form -->
            <StackPanel Grid.Row="2">
                
                <!-- Nombre -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Nombre" Style="{StaticResource AppLabelStyle}"/>
                    <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource AppInputStyle}"
                             IsReadOnly="{Binding IsReadOnly}"/>
                </StackPanel>

                <!-- Descripción -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Descripción" Style="{StaticResource AppLabelStyle}"/>
                    <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource AppInputStyle}"
                             IsReadOnly="{Binding IsReadOnly}"
                             Height="80"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalContentAlignment="Top"
                             Padding="12,10"/>
                </StackPanel>

                <!-- Ciudad -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Ciudad" Style="{StaticResource AppLabelStyle}"/>
                    <TextBox Text="{Binding City, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource AppInputStyle}"
                             IsReadOnly="{Binding IsReadOnly}"/>
                </StackPanel>

                <!-- Dirección -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Dirección" Style="{StaticResource AppLabelStyle}"/>
                    <TextBox Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource AppInputStyle}"
                             IsReadOnly="{Binding IsReadOnly}"/>
                </StackPanel>

                <!-- Número telefónico -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Número telefónico" Style="{StaticResource AppLabelStyle}"/>
                    <TextBox Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource AppInputStyle}"
                             IsReadOnly="{Binding IsReadOnly}"/>
                </StackPanel>

                <!-- Correo -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Correo" Style="{StaticResource AppLabelStyle}"/>
                    <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource AppInputStyle}"
                             IsReadOnly="{Binding IsReadOnly}"/>
                </StackPanel>

                <!-- Aforo Máximo -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Aforo Máximo" Style="{StaticResource AppLabelStyle}"/>
                    <TextBox Text="{Binding MaxCapacity, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource AppInputStyle}"
                             IsReadOnly="{Binding IsReadOnly}"/>
                </StackPanel>
            </StackPanel>

            <!-- Action Buttons -->
            <Grid Grid.Row="3" Margin="0,30,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Botón Eliminar Establecimiento (Izquierda) -->
                <Button Grid.Column="0"
                        Content="ELIMINAR ESTABLECIMIENTO"
                        Command="{Binding DeleteEstablishmentCommand}"
                        Style="{StaticResource AppDangerButtonStyle}"
                        Visibility="{Binding IsEditing, Converter={StaticResource BoolToVis}, ConverterParameter=Inverse}"/>

                <!-- Botones de Acción (Derecha) -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    
                    <!-- Modo Visualización -->
                    <StackPanel Orientation="Horizontal" Style="{StaticResource InverseVisibilityStyle}">
                        <Button Content="Editar"
                                Command="{Binding EditCommand}"
                                Style="{StaticResource AppPrimaryButtonStyle}"
                                Padding="30,10"/>
                    </StackPanel>

                    <!-- Modo Edición -->
                    <StackPanel Orientation="Horizontal" Visibility="{Binding IsEditing, Converter={StaticResource BoolToVis}}">
                        <Button Content="Cancelar"
                                Command="{Binding CancelCommand}"
                                Style="{StaticResource AppSecondaryButtonStyle}"
                                Margin="0,0,12,0"/>

                        <Button Content="Guardar"
                                Command="{Binding SaveCommand}"
                                Style="{StaticResource AppSuccessButtonStyle}"
                                Padding="30,10"/>
                    </StackPanel>

                </StackPanel>
            </Grid>

        </Grid>
    </ScrollViewer>
</Page>
