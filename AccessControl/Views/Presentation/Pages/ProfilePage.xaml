<Page x:Class="AccessControl.Views.Pages.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AccessControl.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="ProfilePage"
      Background="Transparent">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        
        <!-- Converter inverso -->
        <Style x:Key="InverseVisibilityStyle" TargetType="FrameworkElement">
            <Setter Property="Visibility" Value="Collapsed"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsEditing}" Value="False">
                    <Setter Property="Visibility" Value="Visible"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                  HorizontalScrollBarVisibility="Disabled"
                  Padding="40,20,40,40">
        
        <Grid MaxWidth="700">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Grid.Row="0"
                       Text="Información del Perfil:"
                       Style="{StaticResource AppTitleStyle}"
                       FontSize="{StaticResource FontSizeLarge}"
                       Margin="0,0,0,30"/>

            <!-- Form -->
            <StackPanel Grid.Row="1">
                
                <!-- Nombre Completo -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Nombre Completo" Style="{StaticResource AppLabelStyle}"/>
                    <TextBox Text="{Binding FullName, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource AppInputStyle}"
                             IsReadOnly="{Binding IsReadOnly}"/>
                </StackPanel>

                <!-- Correo -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Correo" Style="{StaticResource AppLabelStyle}"/>
                    <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource AppInputStyle}"
                             IsReadOnly="{Binding IsReadOnly}"/>
                </StackPanel>

                <!-- Ciudad -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Documento de Identidad" Style="{StaticResource AppLabelStyle}"/>
                    <TextBox Text="{Binding IdentityDocument, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource AppInputStyle}"
                             IsReadOnly="{Binding IsReadOnly}"/>
                </StackPanel>

                <!-- Dirección -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Número telefónico" Style="{StaticResource AppLabelStyle}"/>
                    <TextBox Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource AppInputStyle}"
                             IsReadOnly="{Binding IsReadOnly}"/>
                </StackPanel>
            </StackPanel>

            <!-- Action Buttons -->
            <Grid Grid.Row="2" Margin="0,30,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Botones de Acción (Derecha) -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    
                    <!-- Modo Visualización -->
                    <StackPanel Orientation="Horizontal" Style="{StaticResource InverseVisibilityStyle}">
                        <Button Content="Actualizar Contraseña"
                                Command="{Binding UpdatePasswordCommand}"
                                Style="{StaticResource AppDarkButtonStyle}"
                                Margin="0,0,12,0"/>

                        <Button Content="Editar"
                                Command="{Binding EditCommand}"
                                Style="{StaticResource AppPrimaryButtonStyle}"
                                Padding="30,10"/>
                    </StackPanel>

                    <!-- Modo Edición -->
                    <StackPanel Orientation="Horizontal" Visibility="{Binding IsEditing, Converter={StaticResource BoolToVis}}">
                        <Button Content="Cancelar"
                                Command="{Binding CancelCommand}"
                                Style="{StaticResource AppSecondaryButtonStyle}"
                                Margin="0,0,12,0"/>

                        <Button Content="Guardar"
                                Command="{Binding SaveCommand}"
                                Style="{StaticResource AppSuccessButtonStyle}"
                                Padding="30,10"/>
                    </StackPanel>

                </StackPanel>
            </Grid>

        </Grid>
    </ScrollViewer>
</Page>
