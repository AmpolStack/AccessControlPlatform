<Window x:Class="AccessControl.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AccessControl"
        mc:Ignorable="d"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        FontFamily="{StaticResource InterFont}"
        FontWeight="{StaticResource InterNormalWeight}"
        Foreground="#373737"
        Title="MainWindow" Height="450" Width="800">

    <Border Background="#fff" CornerRadius="18" Padding="10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MaxWidth="200"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*" MaxWidth="200"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*" MaxHeight="90"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*" MaxHeight="40"/>
            </Grid.RowDefinitions>


            <TextBlock Grid.Column="0"
                       Grid.Row="0"
                       FontWeight="{StaticResource InterBoldWeight}"
                       FontSize="32"
                       Text="CONTROL&#10;DE&#10;INGRESO"
                       VerticalAlignment="Center"
                       LineHeight="24"
                       LineStackingStrategy="BlockLineHeight"
                       TextAlignment="Left"
                       HorizontalAlignment="Center">
            </TextBlock>

            <TextBlock Grid.Column="0"
                       Grid.Row="2"
                       Grid.ColumnSpan="3"
                       TextAlignment="Left"
                   
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center">
                ¿Está usted interesado en crear su propio establecimiento?
                <Hyperlink Foreground="#3743E9" 
                           TextDecorations="Underline"
                           >
                Ingrese Aquí
                </Hyperlink>
            </TextBlock>


            <Grid Grid.Column="1"
      Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*" MaxHeight="120"/>
                    <RowDefinition Height="*" MaxHeight="72" />
                    <RowDefinition Height="*"  MaxHeight="72"/>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid HorizontalAlignment="Center">
                    <Ellipse Fill="#373737"/>

                    <Border CornerRadius="100"
                            ClipToBounds="True"
                            Margin="10">
                        <Image Source="/Resources/Assets/Images/user-white-icon.png"
                               Stretch="Uniform"
                               RenderOptions.BitmapScalingMode="HighQuality"/>
                    </Border>
                </Grid>



                <StackPanel Grid.Row="1"
                Orientation="Vertical"
                Margin="0, 10"
                HorizontalAlignment="Stretch">

                    <Label Content="_Email"
               FontFamily="{StaticResource InterFont}"
               Padding="0"
               FontSize="14"
               FontWeight="{StaticResource InterSemiBoldWeight}"
               Foreground="#373737"
               Target="{Binding ElementName=emailTextBox}" />

                    <Border CornerRadius="5"
                Background="#D9D9D9">
                        <TextBox x:Name="emailTextBox"
                     Background="Transparent"
                     BorderThickness="0"
                     VerticalContentAlignment="Center"
                     Padding="10,4" />
                    </Border>

                </StackPanel>

                <StackPanel Grid.Row="2"
                Orientation="Vertical"
                Margin="0,10"
                HorizontalAlignment="Stretch">

                    <Label Content="_Contraseña"
               Padding="0"
               FontSize="14"
               FontWeight="{StaticResource InterSemiBoldWeight}"
               Foreground="#373737"
               Target="{Binding ElementName=passwordTextBox}" />

                    <Border CornerRadius="5"
                Background="#D9D9D9">
                        <TextBox x:Name="passwordTextBox"
                     Background="Transparent"
                     BorderThickness="0"
                     VerticalContentAlignment="Center"
                     Padding="10,4" />
                    </Border>

                </StackPanel>

                <Border Grid.Row="3"
            CornerRadius="5"
            Background="#373737"
            HorizontalAlignment="Center"
            MaxHeight="40">
                    <Button Content="Ingresar"
                FontSize="14"
                Background="Transparent"
                Foreground="White"
                FontWeight="{StaticResource InterSemiBoldWeight}"
                Padding="30,8"
                BorderThickness="0"/>
                </Border>

            </Grid>


        </Grid>

    </Border>
    


</Window>
