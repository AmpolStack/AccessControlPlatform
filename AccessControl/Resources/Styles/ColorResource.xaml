<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Primary Colors -->
    <SolidColorBrush x:Key="AppPrimaryBrush" Color="#3B5AF8"/>
    <SolidColorBrush x:Key="AppSecondaryBrush" Color="#1F2937"/>

    <!-- Semantic Colors -->
    <SolidColorBrush x:Key="AppSuccessBrush" Color="#10B981"/> 
    <SolidColorBrush x:Key="AppWarningBrush" Color="#F59E0B"/>
    <SolidColorBrush x:Key="AppDangerBrush" Color="#EF4444"/> 
    <SolidColorBrush x:Key="AppInfoBrush" Color="#3B82F6"/> 

    <!-- Text Colors -->
    <SolidColorBrush x:Key="AppTextPrimaryBrush" Color="#111827"/> 
    <SolidColorBrush x:Key="AppTextSecondaryBrush" Color="#374151"/> 
    <SolidColorBrush x:Key="AppTextTertiaryBrush" Color="#6B7280"/> 
    <SolidColorBrush x:Key="AppTextLightBrush" Color="#FFFFFF"/>

    <!-- Border & Background Colors -->
    <SolidColorBrush x:Key="AppBorderBrush" Color="#D1D5DB"/> 
    <SolidColorBrush x:Key="AppBorderFocusBrush" Color="#3B5AF8"/>
    <SolidColorBrush x:Key="AppBackgroundLightBrush" Color="#F3F4F6"/> 
    <SolidColorBrush x:Key="AppBackgroundHoverBrush" Color="#F9FAFB"/> 
    <SolidColorBrush x:Key="AppBackgroundReadOnlyBrush" Color="#E5E7EB"/> 
    <SolidColorBrush x:Key="AppWhiteBrush" Color="#FFFFFF"/>

    <SolidColorBrush x:Key="AppBlackBrush" Color="#111827"/>
    <SolidColorBrush x:Key="AppBlueBrush"  Color="#3B5AF8"/>
    <SolidColorBrush x:Key="AppGrayBrush" Color="#9CA3AF"/>
    <SolidColorBrush x:Key="AppRedBrush"   Color="#EF4444"/>
    <SolidColorBrush x:Key="AppGreenBrush" Color="#10B981"/>

    <Color x:Key="AppPrimaryColor">#3B5AF8</Color>
    <Color x:Key="AppSuccessColor">#10B981</Color>
    <Color x:Key="AppDangerColor">#EF4444</Color>
    <Color x:Key="AppWhiteColor">#FFFFFF</Color>
    <Color x:Key="AppBlackColor">#111827</Color>
    <Color x:Key="AppGrayColor">#9CA3AF</Color>


</ResourceDictionary>