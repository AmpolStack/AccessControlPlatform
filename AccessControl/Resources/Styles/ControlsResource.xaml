<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Input Style for TextBox -->
    <Style x:Key="AppInputStyle" TargetType="TextBox">
        <Setter Property="Padding" Value="12,10"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeNormal}"/>
        <Setter Property="FontFamily" Value="{StaticResource InterFont}"/>
        <Setter Property="Height" Value="45"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="{StaticResource AppBorderBrush}"/>
        <Setter Property="Background" Value="{StaticResource AppWhiteBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource AppTextPrimaryBrush}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}" 
                            CornerRadius="6">
                        <ScrollViewer x:Name="PART_ContentHost" Margin="5,0"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsReadOnly" Value="True">
                <Setter Property="Background" Value="{StaticResource AppBackgroundReadOnlyBrush}"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Foreground" Value="{StaticResource AppTextTertiaryBrush}"/>
                <Setter Property="Cursor" Value="Arrow"/>
            </Trigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="IsReadOnly" Value="False"/>
                    <Condition Property="IsMouseOver" Value="True"/>
                </MultiTrigger.Conditions>
                <Setter Property="BorderBrush" Value="{StaticResource AppTextTertiaryBrush}"/>
            </MultiTrigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="IsReadOnly" Value="False"/>
                    <Condition Property="IsFocused" Value="True"/>
                </MultiTrigger.Conditions>
                <Setter Property="BorderBrush" Value="{StaticResource AppBorderFocusBrush}"/>
                <Setter Property="BorderThickness" Value="2"/>
            </MultiTrigger>
        </Style.Triggers>
    </Style>

    <!-- PasswordBox Style -->
    <Style x:Key="AppPasswordStyle" TargetType="PasswordBox">
        <Setter Property="Padding" Value="12,10"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeNormal}"/>
        <Setter Property="FontFamily" Value="{StaticResource InterFont}"/>
        <Setter Property="Height" Value="45"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="{StaticResource AppBorderBrush}"/>
        <Setter Property="Background" Value="{StaticResource AppWhiteBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource AppTextPrimaryBrush}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="PasswordBox">
                    <Border Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}" 
                            CornerRadius="6">
                        <ScrollViewer x:Name="PART_ContentHost" Margin="5,0"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsFocused" Value="True">
                <Setter Property="BorderBrush" Value="{StaticResource AppBorderFocusBrush}"/>
                <Setter Property="BorderThickness" Value="2"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Base Button Style -->
    <Style x:Key="AppButtonStyle" TargetType="Button">
        <Setter Property="FontFamily" Value="{StaticResource InterFont}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeNormal}"/>
        <Setter Property="FontWeight" Value="{StaticResource InterMediumWeight}"/>
        <Setter Property="Padding" Value="20,10"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                            CornerRadius="6"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Opacity" Value="0.9"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Opacity" Value="0.8"/>
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Opacity" Value="0.5"/>
                <Setter Property="Cursor" Value="No"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Primary Button Style -->
    <Style x:Key="AppPrimaryButtonStyle" TargetType="Button" BasedOn="{StaticResource AppButtonStyle}">
        <Setter Property="Background" Value="{StaticResource AppPrimaryBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource AppWhiteBrush}"/>
    </Style>

    <!-- Secondary/Cancel Button Style -->
    <Style x:Key="AppSecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource AppButtonStyle}">
        <Setter Property="Background" Value="{StaticResource AppTextTertiaryBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource AppWhiteBrush}"/>
    </Style>

    <!-- Dark Button Style -->
    <Style x:Key="AppDarkButtonStyle" TargetType="Button" BasedOn="{StaticResource AppButtonStyle}">
        <Setter Property="Background" Value="{StaticResource AppSecondaryBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource AppWhiteBrush}"/>
    </Style>

    <!-- Danger Button Style -->
    <Style x:Key="AppDangerButtonStyle" TargetType="Button" BasedOn="{StaticResource AppButtonStyle}">
        <Setter Property="Background" Value="{StaticResource AppDangerBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource AppWhiteBrush}"/>
    </Style>

    <!-- Success Button Style -->
    <Style x:Key="AppSuccessButtonStyle" TargetType="Button" BasedOn="{StaticResource AppButtonStyle}">
        <Setter Property="Background" Value="{StaticResource AppSuccessBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource AppWhiteBrush}"/>
    </Style>

    <!-- DataGrid Styles -->
    <Style x:Key="AppDataGridColumnHeaderStyle" TargetType="DataGridColumnHeader">
        <Setter Property="Background" Value="{StaticResource AppWhiteBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource AppTextTertiaryBrush}"/>
        <Setter Property="FontWeight" Value="{StaticResource InterSemiBoldWeight}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeSmall}"/>
        <Setter Property="Padding" Value="12,10"/>
        <Setter Property="BorderThickness" Value="0,0,0,2"/>
        <Setter Property="BorderBrush" Value="{StaticResource AppBackgroundReadOnlyBrush}"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
    </Style>

    <Style x:Key="AppDataGridRowStyle" TargetType="DataGridRow">
        <Setter Property="Background" Value="{StaticResource AppWhiteBrush}"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
        <Setter Property="BorderBrush" Value="{StaticResource AppBackgroundLightBrush}"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource AppBackgroundHoverBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="AppDataGridCellStyle" TargetType="DataGridCell">
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="12,0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="DataGridCell">
                    <Border Background="{TemplateBinding Background}" 
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="{StaticResource AppTextPrimaryBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="AppDataGridStyle" TargetType="DataGrid">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="RowHeight" Value="50"/>
        <Setter Property="FontFamily" Value="{StaticResource InterFont}"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="GridLinesVisibility" Value="None"/>
        <Setter Property="HeadersVisibility" Value="Column"/>
        <Setter Property="AutoGenerateColumns" Value="False"/>
        <Setter Property="CanUserAddRows" Value="False"/>
        <Setter Property="CanUserDeleteRows" Value="False"/>
        <Setter Property="CanUserResizeRows" Value="False"/>
        <Setter Property="SelectionMode" Value="Single"/>
        <Setter Property="ColumnHeaderStyle" Value="{StaticResource AppDataGridColumnHeaderStyle}"/>
        <Setter Property="RowStyle" Value="{StaticResource AppDataGridRowStyle}"/>
        <Setter Property="CellStyle" Value="{StaticResource AppDataGridCellStyle}"/>
    </Style>
</ResourceDictionary>